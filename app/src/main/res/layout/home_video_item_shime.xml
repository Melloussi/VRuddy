<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/thumbnaill"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#737373"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/titlee"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_below="@+id/thumbnaill"
                android:background="#737373"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                />
            <!-- android:layout_below="@+id/thumbnail"!-->
            <LinearLayout
                android:id="@+id/channelNameLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/titlee">
                <TextView
                    android:layout_width="90dp"
                    android:background="#737373"
                    android:layout_height="8dp"
                    android:layout_below="@+id/titlee"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:layout_width="90dp"
                    android:background="#737373"
                    android:layout_height="8dp"
                    android:layout_below="@+id/titlee"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/channelNameLl">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="7dp"
                    android:background="#737373"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="0dp"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@+id/heartt"
                    android:background="#737373"/>
                <ImageView
                    android:id="@+id/heartt"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentRight="true"
                    android:background="#737373"/>

            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>