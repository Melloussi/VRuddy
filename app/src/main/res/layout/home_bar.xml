<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:background="@color/mainRedColor"
    app:subtitleTextColor="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/backImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">
            <SearchView
                android:id="@+id/home_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:searchIcon="@drawable/ic__search_icon"
                android:background="@drawable/b_background"
                android:queryHint="@string/SearchForMedia"
                app:theme="@style/SearchViewStyle"
                android:iconifiedByDefault="false"
                app:iconifiedByDefault="false" />
            <FrameLayout
                android:id="@+id/search_frame_for_click"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <!--<Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="40sp"
            android:background="@drawable/ic_add_link"
            android:layout_weight="0" />-->

    </LinearLayout>


</androidx.appcompat.widget.Toolbar>