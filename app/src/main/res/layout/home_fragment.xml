<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SplachScreen"
        android:background="#ffff">
        <include
            android:id="@+id/home_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/home_bar" />

        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginBottom="4dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="1dp"
                android:layout_centerInParent="true"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/fb_btn"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_fb_1"
                        android:layout_margin="1dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:text="Facebook"
                        android:layout_below="@+id/fb_btn"
                        android:autoSizeTextType="uniform"
                        android:textSize="10sp"
                        android:autoSizeMinTextSize="8sp"
                        android:layout_marginBottom="1dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="1dp"
                android:layout_centerInParent="true"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/whats_btn"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_whatsapp_1"
                        android:layout_margin="1dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:text="Whatsapp"
                        android:layout_below="@+id/whats_btn"
                        android:autoSizeTextType="uniform"
                        android:textSize="10sp"
                        android:autoSizeMinTextSize="8sp"
                        android:layout_marginBottom="1dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="1dp"
                android:layout_centerInParent="true"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/insta_btn"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_insta_1"
                        android:layout_margin="1dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:text="Instagram"
                        android:layout_below="@+id/insta_btn"
                        android:autoSizeTextType="uniform"
                        android:textSize="10sp"
                        android:autoSizeMinTextSize="8sp"
                        android:layout_marginBottom="1dp"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="1dp"
                android:layout_centerInParent="true"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/snap_btn"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_snap_1"
                        android:layout_margin="1dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:text="Snapchat"
                        android:layout_below="@+id/snap_btn"
                        android:autoSizeTextType="uniform"
                        android:textSize="10sp"
                        android:autoSizeMinTextSize="8sp"
                        android:layout_marginBottom="1dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="1dp"
                android:layout_centerInParent="true"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/youtube_btn"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_youtube_1"
                        android:layout_margin="1dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:text="Youtube"
                        android:layout_below="@+id/youtube_btn"
                        android:textSize="10sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:layout_marginBottom="1dp"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/home_nested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/myNav"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/TrendingVideos"
                            android:textSize="15sp"
                            android:textColor="@color/DarkGray"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="4dp"/>
                        <Button
                            android:visibility="invisible"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:text="All"
                            android:textAllCaps="false"
                            android:background="@drawable/button_shape"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollingCache="false"
                        android:orientation="horizontal"
                        android:visibility="visible">

                    </androidx.recyclerview.widget.RecyclerView>
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/shimmerTrend">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp">
                            <include
                                layout="@layout/treand_item_shime"/>
                            <include
                                layout="@layout/treand_item_shime"/>
                            <include
                                layout="@layout/treand_item_shime"/>
                            <include
                                layout="@layout/treand_item_shime"/>
                            <include
                                layout="@layout/treand_item_shime"/>
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/RecommendedVideos"
                            android:textSize="15sp"
                            android:textColor="@color/DarkGray"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="4dp"/>
                        <Button
                            android:visibility="invisible"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:text="All"
                            android:textAllCaps="false"
                            android:background="@drawable/button_shape"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/homeVideoRecycle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false">

                        </androidx.recyclerview.widget.RecyclerView>
                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/homeVideoShimmer"
                            android:visibility="visible"
                            android:layout_below="@+id/homeVideoRecycle">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <include
                                    layout="@layout/home_video_item_shime"/>
                                <include
                                    layout="@layout/home_video_item_shime"/>
                                <include
                                    layout="@layout/home_video_item_shime"/>

                            </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>
                        <ProgressBar
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:layout_below="@id/homeVideoRecycle"
                            android:theme="@style/RedSpinner"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>



    </LinearLayout>
</FrameLayout>