<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/VitalMediaDownloader"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:textColor="@color/mainRedColor"
                android:textStyle="normal"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="⦁"
                android:layout_toRightOf="@id/notification_title"
                android:layout_marginLeft="3dp"/>
            <TextView
                android:id="@+id/notification_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:textColor="@color/lightBlack"
                android:layout_toRightOf="@+id/dot"
                android:text="584.0B/"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:id="@+id/notification_file_total_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:textColor="@color/lightBlack"
                android:layout_toRightOf="@+id/notification_file_size"
                android:text="584.0B"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/thumbnail_download_file"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/vi"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/notification_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Compat.Notification.Info"
                android:layout_toLeftOf="@+id/thumbnail_download_file"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:text="Ariana Grande - six thirty (audio)(128kps)"
                android:maxLines="1"
                android:textSize="16sp"/>
            <ProgressBar
                android:visibility="visible"
                android:id="@+id/notification_download_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressTint="@color/mainRedColor"
                android:progressBackgroundTint="@color/mainRedColorLightBackground"
                android:progress="0"
                android:layout_below="@id/notification_content"
                android:layout_toLeftOf="@+id/thumbnail_download_file"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="0dp"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/notification_convert_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminateOnly="true"
                android:indeterminateTint="@color/mainRedColor"
                android:progressTint="@color/mainRedColor"
                android:progressBackgroundTint="@color/mainRedColorLightBackground"
                android:progress="50"
                android:layout_below="@id/notification_content"
                android:layout_toLeftOf="@+id/thumbnail_download_file"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="0dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>