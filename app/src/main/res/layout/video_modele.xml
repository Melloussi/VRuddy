<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/radius_corner_layout_background"
        android:layout_margin="6dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/video_thumbnail"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/vi"

            app:shapeAppearanceOverlay="@style/leftSideCorner"/>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:background="@drawable/inner_shadow"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/video_file_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_black_background"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="20:23"
                android:visibility="visible"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/video_thumbnail"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/video_fileTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Shape your Image with Circle, Rounded Square, Cuts at corner. Shapeable ImageView in Android Studio"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:gravity="left"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    >

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:id="@+id/video_channel_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="By Miss Monique"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/DarkGray"
                        android:textSize="10sp"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/video_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_option_black"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>